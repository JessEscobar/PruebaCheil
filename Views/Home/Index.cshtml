@{
    ViewData["Title"] = "Home Page";
}

<div class="text-center">
    <h1 class="display-4">Welcome</h1>
    <span input id="descripcion"></span>
</div>

@section Scripts{

    <script>
        $(document).ready(function () {

             $.ajax({
                url: "@Url.Action("ConsultarHoteles", "Home")",
                 method: "get",
                 dataType: 'json',
                 traditonal: true,    
                 success: function (respuesta) {

                     console.log(respuesta)
                     if (respuesta.estado) {
                         $('#descripcion').text("Conexión correcta a la BD ApiHoteles");
                    }
                },

                error: function () {

                }
            });
        })
    </script>

}